<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
   <VBox GridPane.columnIndex="0" GridPane.rowIndex="0">
         <MenuBar fx:id="menuBar" maxWidth="Infinity">
            <menus>
               <Menu text="File">
                  <items>
                     <MenuItem text="Open Database" onAction="#openDatabase"/>
                     <SeparatorMenuItem />
                     <MenuItem text="Exit" onAction="#exitApp"/>
                  </items>
               </Menu>
               <Menu text="Edit">
                  <items>
                     <MenuItem text="Copy" />
                  </items>
               </Menu>
            </menus>
         </MenuBar>
      <HBox VBox.vgrow="ALWAYS">
         <children>
            <VBox>
               <Button mnemonicParsing="false" onAction="#openDatabase" text="Open database">
                  <VBox.margin>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </VBox.margin></Button>
               <Label fx:id="fileNameLabel" text="No file selected">
                  <padding>
                     <Insets left="10.0" />
                  </padding>
               </Label>
               <Button alignment="TOP_LEFT" mnemonicParsing="false" onAction="#updateKeyValues" text="Update">
                  <VBox.margin>
                     <Insets left="10.0" />
                  </VBox.margin>
               </Button>
            </VBox>
            <VBox HBox.hgrow="ALWAYS">
               <children>
                     <TableView fx:id="tableKeyValue" editable="true" maxWidth="5000.0" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                        <columns>
                           <TableColumn fx:id="keyName" text="Key" />
                           <TableColumn fx:id="valueName" text="Value" />
                        </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                     </TableView>

                  <HBox VBox.vgrow="ALWAYS">
                     <children>
                        <Label text="Search">
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                           <HBox.margin>
                              <Insets left="10.0" right="10.0" top="5.0" />
                           </HBox.margin>
                        </Label>
                        <TextField fx:id="searchText" onAction="#searchValue">
                           <HBox.margin>
                              <Insets left="10.0" right="10.0" />
                           </HBox.margin>
                        </TextField>
                        <RadioButton mnemonicParsing="false" selected="true" text="Key">
                           <HBox.margin>
                              <Insets left="10.0" top="5.0" />
                           </HBox.margin>
                           <toggleGroup>
                              <ToggleGroup fx:id="radioSelector" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton mnemonicParsing="false" text="Value" toggleGroup="$radioSelector">
                           <HBox.margin>
                              <Insets left="10.0" top="5.0" />
                           </HBox.margin>
                        </RadioButton>
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" top="20.0" />
                     </VBox.margin>
                  </HBox>

               </children>
            </VBox>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>

   </VBox>
   </children>
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="600" percentWidth="100.0" prefWidth="100.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="400" prefHeight="400" vgrow="SOMETIMES" />
   </rowConstraints>
</GridPane>
